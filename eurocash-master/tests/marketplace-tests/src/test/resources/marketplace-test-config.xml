<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd

                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

  <bean class="org.jasypt.spring31.properties.EncryptablePreferencesPlaceholderConfigurer">
    <constructor-arg index="0" ref="textEncryptor"/>
    <property name="locations">
      <list>
        <value>classpath:testrail.properties</value>
        <value>classpath:environment.properties</value>
        <value>classpath:selenium.properties</value>
      </list>
    </property>
    <property name="properties" ref="additionalProperties"/>
    <property name="ignoreResourceNotFound" value="false"/>
    <property name="ignoreUnresolvablePlaceholders" value="true"/>
  </bean>

  <util:properties id="additionalProperties">
    <prop key="environmentName">${environment}</prop>
    <prop key="selenium.webdriver.browserType">${browserType}</prop>
    <prop key="selenium.webdriver.platform">${platform}</prop>
    <prop key="selenium.webdriver.useLocalDriver">${useLocalBrowser}</prop>
    <prop key="testRail.enabled">${testRailEnabled}</prop>
  </util:properties>

  <bean id="textEncryptor" class="org.jasypt.util.text.BasicTextEncryptor">
    <property name="password" value="m9gDRLC1RZu4aZfHfhc3k1YAxBVdR1KM"/>
  </bean>

  <bean id="ehurtAppUsersPool" class="pl.ninebits.qa.eurocash.api.users.EhurtAppUsersPool">
    <constructor-arg index="0" value="/users/ehurt-users.xls" />
    <constructor-arg index="1" ref="textEncryptor"/>
  </bean>

  <bean id="vendorPortalUserPool" class="pl.ninebits.qa.eurocash.api.users.VendorPortalUserPool">
    <constructor-arg index="0" value="/users/vendorportal-users.xls" />
    <constructor-arg index="1" ref="textEncryptor"/>
  </bean>

  <import resource="classpath:basic-test-config.xml"/>
  <import resource="classpath:platform-api-config.xml"/>
</beans>