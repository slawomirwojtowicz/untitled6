<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" value="#{@systemProperties}"/>
    <property name="targetMethod" value="putAll"/>
    <property name="arguments">
      <util:properties>
        <prop key="java.util.prefs.userRoot">#{@systemProperties['user.home']}/.java/.userPrefs</prop>
      </util:properties>
    </property>
  </bean>


  <bean id="webDriverFactory" class="pl.ninebits.qa.automated.tests.core.selenium.WebDriverFactory">
    <constructor-arg index="0" value="${selenium.webdriver.seleniumGridUrl}"/>
    <constructor-arg index="1" value="${selenium.webdriver.scriptTimeoutInSec}"/>
    <constructor-arg index="2" value="${selenium.webdriver.pageLoadTimeoutInSec}"/>
  </bean>

  <bean id="testRailClient" class="pl.ninebits.qa.automated.tests.core.testrail.TestRailClient">
    <constructor-arg index="0" value="${testRail.apiUrl}"/>
    <constructor-arg index="1" value="${testRail.username}"/>
    <constructor-arg index="2" value="${testRail.password}"/>
  </bean>

  <bean id="testConfig" class="pl.ninebits.qa.automated.tests.core.tests.TestConfig"/>
</beans>